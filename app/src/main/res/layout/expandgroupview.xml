<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="#f4f4f4"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <View
        android:id="@+id/space1"
        android:layout_width="match_parent"
        android:layout_height="20px">
    </View>



    <RelativeLayout
        android:id="@+id/ll"
        android:layout_below="@+id/space1"
        android:layout_width="match_parent"
        android:background="@drawable/history_date_background"
        android:layout_height="200px">

        <ImageView
            android:layout_width="20px"
            android:layout_height="240px"
            android:layout_marginLeft="90px"
            android:src="@drawable/history_date_line"/>

        <TextView
            android:id="@+id/groupDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="150px"
            android:layout_centerVertical="true"
            android:text="25十一月"
            android:textSize="48px"
            android:textColor="#000000"/>
        
        <View
            android:layout_toRightOf="@+id/groupDate"
            android:layout_marginLeft="27px"
            android:layout_width="3px"
            android:layout_height="180px"
            android:layout_centerVertical="true"
            android:background="#d8d8d8"/>

        <TextView
            android:id="@+id/lldistance"
            android:layout_toRightOf="@+id/groupDate"
            android:layout_marginLeft="54px"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:textColor="#000000"
            android:text="总公里"
            android:textSize="48px" />

        <TextView
            android:id="@+id/distance"
            android:layout_toRightOf="@+id/lldistance"
            android:layout_marginLeft="88px"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:textColor="#1dcf96"
            android:text="16.7km"
            android:textSize="48px" />
    </RelativeLayout>

    <View
        android:layout_below="@+id/ll"
        android:layout_width="match_parent"
        android:layout_height="20px">
    </View>
</RelativeLayout>