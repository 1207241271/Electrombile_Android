<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    tools:context="com.xunce.electrombile.activity.account.SMSandPasswordActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text = "注册密码"/>

        <Button
            android:id = "@+id/btn_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:text = "回撤"/>
    </RelativeLayout>

    <TextView
        android:id = "@+id/tv_Current_Phone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text = "当前手机号"/>

    <EditText
        android:id="@+id/et_SMSCode"
        android:layout_width="274dp"
        android:layout_height="42dp"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="50dp"
        android:background="@drawable/line_et"
        android:hint="验证码"
        android:inputType="phone"
        android:paddingLeft="15dp" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:id = "@+id/tv_LeftSecond"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text = "20"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text = "秒后点击"/>

        <Button
            android:id = "@+id/btn_ResendSysCode"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text = "重新发送"/>
    </LinearLayout>

    <EditText
        android:id="@+id/et_Password"
        android:layout_width="274dp"
        android:layout_height="42dp"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="50dp"
        android:background="@drawable/line_et"
        android:hint="密码"
        android:paddingLeft="15dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text = "请妥善保管你的密码"/>

    <Button
        android:id = "@+id/btn_NextStep"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text = "下一步"/>

</LinearLayout>
