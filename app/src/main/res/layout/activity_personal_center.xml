<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#eeeeee"
    android:orientation="vertical"
    tools:context="com.xunce.electrombile.activity.account.PersonalCenterActivity">

    <RelativeLayout
        style="@style/clickableLayout">
        <TextView
            android:layout_centerHorizontal="true"
            style="@style/clickableLayoutTextview"
            android:text = "车主中心"/>

        <Button
            android:layout_alignParentLeft="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text = "回撤"/>

    </RelativeLayout>

    <LinearLayout
        android:id="@+id/layout_UserName"
        style="@style/clickableLayout"
        android:layout_marginTop="8dp"
        android:elevation="2dip">

        <ImageView
            style="@style/settings_fragment_iv"
            android:src="@drawable/setting_tel" />

        <TextView
            style="@style/clickableLayoutTextview"
            android:text="用户昵称"
            android:textColor="@color/black" />

        <TextView
            android:id = "@+id/tv_UserName"
            style="@style/clickableLayoutTextview"
            android:text="哈哈"
            android:textColor="@color/black" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/layout_Gender"
        style="@style/clickableLayout"
        android:layout_marginTop="2dp"
        android:elevation="2dip">

        <ImageView
            style="@style/settings_fragment_iv"
            android:src="@drawable/setting_tel" />

        <TextView
            style="@style/clickableLayoutTextview"
            android:text="性       别"
            android:textColor="@color/black" />

        <TextView
            android:id="@+id/tv_Gender"
            style="@style/clickableLayoutTextview"
            android:text="男"
            android:textColor="@color/black" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/layout_BirthDate"
        style="@style/clickableLayout"
        android:layout_marginTop="2dp"
        android:elevation="2dip">

        <ImageView
            style="@style/settings_fragment_iv"
            android:src="@drawable/setting_tel" />

        <TextView
            style="@style/clickableLayoutTextview"
            android:text="出生年代"
            android:textColor="@color/black" />

        <TextView
            android:id="@+id/tv_BirthDate"
            style="@style/clickableLayoutTextview"
            android:text="1987-02-18"
            android:textColor="@color/black" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/layout_ChangePassword"
        style="@style/clickableLayout"
        android:layout_marginTop="60dp"
        android:elevation="2dip">

        <ImageView
            style="@style/settings_fragment_iv"
            android:src="@drawable/setting_tel" />

        <TextView
            style="@style/clickableLayoutTextview"
            android:text="修改密码"
            android:textColor="@color/black" />


    </LinearLayout>
</LinearLayout>
