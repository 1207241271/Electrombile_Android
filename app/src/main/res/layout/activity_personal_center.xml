<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#eeeeee"
    android:orientation="vertical"
    tools:context="com.xunce.electrombile.activity.account.PersonalCenterActivity">

    <RelativeLayout
        android:id="@+id/rl_1"
        android:layout_width="match_parent"
        android:layout_height="184dp"
        android:background="@color/white"
        android:elevation="2dip">

        <ImageView
            android:id="@+id/head_portrait"
            android:layout_width="135dp"
            android:layout_height="135dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="24dp"
            android:onClick="changeHeadPortrait"
            android:src="@drawable/iv_person_head" />

        <TextView
            android:id="@+id/tv_equip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="60dp"
            android:layout_toRightOf="@+id/head_portrait"
            android:text="个人中心"
            android:textSize="25sp" />

        <TextView
            android:id="@+id/tv_imei"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/tv_equip"
            android:layout_below="@+id/tv_equip"
            android:layout_marginTop="10dp"
            android:singleLine="true"
            android:text="设备卡号：" />
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/ll_iv_container"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:layout_marginTop="24dp"
        android:background="@color/white"
        android:elevation="2dip"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/car1View"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginLeft="5dp"
            android:onClick="addDevice1Photo"
            android:src="@drawable/iv_add_photo_person_act" />

        <ImageView
            android:id="@+id/car2View"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginLeft="5dp"
            android:onClick="addDevice2Photo"
            android:src="@drawable/iv_add_photo_person_act"
            android:visibility="gone" />

        <ImageView
            android:id="@+id/car3View"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginLeft="5dp"
            android:onClick="addDevice3Photo"
            android:src="@drawable/iv_add_photo_person_act"
            android:visibility="gone" />

        <ImageView
            android:id="@+id/car4View"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginLeft="5dp"
            android:onClick="addDevice4Photo"
            android:src="@drawable/iv_add_photo_person_act"
            android:visibility="gone" />
    </LinearLayout>
</LinearLayout>
