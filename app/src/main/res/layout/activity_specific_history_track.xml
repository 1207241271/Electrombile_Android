<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.xunce.electrombile.activity.SpecificHistoryTrackActivity">

    <com.baidu.mapapi.map.MapView
        android:id="@+id/bmapView"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_below="@id/viewpager"
        android:clickable="true" />

    <RelativeLayout
        android:id="@+id/ll_button"
        android:layout_width="match_parent"
        android:background="#1dcf96"
        android:layout_height="44dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text = "历史轨迹"
            android:textSize="16dp"
            android:textColor="#d0f9e5"/>
    </RelativeLayout>

    <RelativeLayout
        android:layout_below="@+id/ll_button"
        android:layout_marginTop="30px"
        android:layout_marginLeft="35px"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:id="@+id/tv_CarName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#ffffff"
                android:background="#1dcf96"
                android:textSize="42px"
                android:text="车辆名称:一号"/>
            <View
                android:layout_width="wrap_content"
                android:layout_height="15px"/>

            <TextView
                android:id="@+id/tv_startPoint"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#ffffff"
                android:background="#1dcf96"
                android:textSize="42px"
                android:text="起始位置:"/>

            <View
                android:layout_width="wrap_content"
                android:layout_height="15px"/>

            <TextView
                android:id="@+id/tv_endPoint"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#ffffff"
                android:background="#1dcf96"
                android:textSize="42px"
                android:text="终点位置:"/>

            <View
                android:layout_width="wrap_content"
                android:layout_height="15px"/>

            <TextView
                android:id="@+id/tv_routeTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#ffffff"
                android:background="#1dcf96"
                android:textSize="42px"
                android:text="历时:"/>

        </LinearLayout>
    </RelativeLayout>

    <RelativeLayout
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="158px"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/btn_play"
            android:layout_marginLeft="70px"
            android:layout_width="106px"
            android:layout_height="103px"
            android:background="@drawable/btn_play1"/>

        <SeekBar
            android:id="@+id/seekbar"
            android:layout_toRightOf="@+id/btn_play"
            android:layout_centerVertical="true"
            android:layout_marginLeft="80px"
            android:layout_width="600px"
            android:layout_height="wrap_content" />

        <Button
            android:id="@+id/btn_speed"
            android:layout_toRightOf="@+id/seekbar"
            android:layout_marginLeft="80px"
            android:layout_width="106px"
            android:layout_height="103px"
            android:background="@drawable/btn_speed"/>
    </RelativeLayout>

</RelativeLayout>
