<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.baidu.mapapi.map.MapView
        android:id="@+id/bmapView"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_below="@id/viewpager"
        android:clickable="true" />

    <RelativeLayout
        android:id="@+id/findcar_container"
        android:background="#1dcf96"
        android:layout_width="match_parent"
        android:layout_height="306px"
        android:layout_alignParentTop="true">

        <TextView
            android:id="@+id/tv_map"
            android:layout_width="wrap_content"
            android:layout_height="44dp"
            android:layout_centerHorizontal="true"
            android:text = "地图"
            android:textSize="52px"
            android:textColor="#d0f9e5"/>
        
        <ImageView
            android:layout_marginTop="132px"
            android:layout_marginLeft="75px"
            android:layout_width="115px"
            android:layout_height="115px" />

        <Button
            android:id="@+id/find_car"
            android:layout_marginTop="132px"
            android:layout_marginLeft="75px"
            android:layout_width="115px"
            android:layout_height="115px"
            android:background="@drawable/img_findcar" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="56px"
            android:layout_below="@+id/find_car"
            android:textSize="38px"
            android:textColor="#ffffff"
            android:text = "精确找车"/>

        <TextView
            android:id="@+id/tv_CarName"
            android:layout_marginTop="157px"
            android:layout_marginLeft="320px"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#ffffff"
            android:textSize="48px"
            android:text = "车辆名称:"/>

        <TextView
            android:id="@+id/tv_CarPosition"
            android:layout_below="@+id/tv_CarName"
            android:layout_alignLeft="@+id/tv_CarName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#ffffff"
            android:textSize="48px"
            android:text = "车辆位置:"/>


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_toRightOf="@+id/find_car"
            android:orientation="vertical">
        </LinearLayout>
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/history_container"
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="120dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btn_play"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="80dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/selector_btn_play" />

        <Button
            android:id="@+id/btn_pause"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="80dp"
            android:background="@drawable/selector_btn_pause" />

        <Button
            android:id="@+id/btn_cancel_track"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_alignTop="@+id/btn_play_or_pause"
            android:layout_marginBottom="80dp"
            android:layout_marginLeft="10dp"
            android:background="@drawable/selector_btn_cancel" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/SeekBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="60dp">
        <SeekBar
            android:id="@+id/seekbar"
            android:layout_width="300dp"
            android:layout_height="wrap_content" />

        <Button
            android:id="@+id/SpeedAdjust"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="*1" />

    </LinearLayout>
    


    <RelativeLayout
        android:id="@+id/ll_map"
        android:layout_width="115px"
        android:layout_height="wrap_content"
        android:layout_marginRight="30px"
        android:layout_marginBottom="206px"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true">
        <Button
            android:id="@+id/btn_record"
            android:layout_width="match_parent"
            android:layout_height="115px"
            android:background="@drawable/history"/>

        <Button
            android:id="@+id/btn_location"
            android:layout_below="@+id/btn_record"
            android:layout_alignLeft="@+id/btn_record"
            android:layout_width="match_parent"
            android:layout_height="115px"
            android:background="@drawable/location"/>

    </RelativeLayout>



