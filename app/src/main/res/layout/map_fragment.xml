<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.baidu.mapapi.map.MapView
        android:id="@+id/bmapView"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_below="@id/title"
        android:clickable="true" />

    <LinearLayout
        android:id="@+id/history_container"
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="120dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btn_play"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="80dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/selector_btn_play" />

        <Button
            android:id="@+id/btn_pause"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="80dp"
            android:background="@drawable/selector_btn_pause" />

        <Button
            android:id="@+id/btn_cancel_track"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_alignTop="@+id/btn_play_or_pause"
            android:layout_marginBottom="80dp"
            android:layout_marginLeft="10dp"
            android:background="@drawable/selector_btn_cancel" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="320dp"
        android:layout_height="40dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="60dp"
        android:background="@drawable/map_tiao_fragment_act"
        android:orientation="horizontal"
        android:weightSum="3">

        <TextView
            android:id="@+id/btn_record"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:clickable="true"
            android:drawableLeft="@drawable/history_trail"
            android:gravity="center"
            android:singleLine="true"
            android:text="历史轨迹"
            android:textColor="#8d8d8d" />

        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="#848484" />

        <TextView
            android:id="@+id/btn_location"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:clickable="true"
            android:drawableLeft="@drawable/ic_location"
            android:gravity="center"
            android:singleLine="true"
            android:text="定位"
            android:textColor="#8d8d8d" />

        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="#848484" />

        <TextView
            android:id="@+id/tv_find_ele"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:clickable="true"
            android:drawableLeft="@drawable/find"
            android:gravity="center"
            android:singleLine="true"
            android:text="精确找车"
            android:textColor="#8d8d8d" />

    </LinearLayout>


</RelativeLayout>