<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">
    <LinearLayout
        android:id="@+id/ll_mapOffline_Location"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="@string/mapOffline_tv_Location"/>
        <ListView
            android:id="@+id/lv_mapOffline_manager"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:listitem="@layout/item_mapofflinelist_child"></ListView>

    </LinearLayout>
    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="@string/mapOffline_tv_hotCity"/>

    <ExpandableListView
        android:id="@+id/lv_mapOffline_allCity"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        tools:listitem="@layout/item_mapofflinelist_parent"
    />
</LinearLayout>