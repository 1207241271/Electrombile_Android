<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f3f3f3"
    android:orientation="vertical">

    <include
        android:id="@+id/ll_button"
        layout="@layout/my_layout_title" />

    <LinearLayout
        android:id="@+id/ll_mapOffline_Location"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:layout_marginTop="10dp"
            android:layout_marginLeft="35dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:textColor="#7f7f7f"
            android:text="@string/mapOffline_tv_already"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="13.33dp"/>

        <ListView
            android:id="@+id/lv_mapOffline_manager"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:listitem="@layout/item_mapofflinelist_child">
        </ListView>

        <View
            android:layout_width="match_parent"
            android:layout_height="21.67dp"/>

    </LinearLayout>

    <TextView
        android:layout_marginTop="21.67dp"
        android:layout_marginLeft="35dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="14sp"
        android:textColor="#7f7f7f"
        android:text="@string/mapOffline_tv_hotCity"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="8.33dp"/>

    <ExpandableListView
        android:id="@+id/lv_mapOffline_allCity"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        tools:listitem="@layout/item_mapofflinelist_parent"/>
</LinearLayout>