        android:layout_alignStart="@id/telnumber_edt"
        android:layout_alignLeft="@id/telnumber_edt"
        android:layout_marginTop="20dp"/>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/validdation_btn"
        android:text="获取验证码"
