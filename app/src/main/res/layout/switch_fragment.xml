<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SwitchFragment">

    <ImageView
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="220dp"
        android:scaleType="fitXY"
        android:src="@drawable/first_fragment_iv" />

    <LinearLayout
        android:id="@+id/ll_container"
        android:layout_width="match_parent"
        android:layout_height="164dip"
        android:layout_below="@+id/title"
        android:orientation="horizontal"
        android:weightSum="2">

        <LinearLayout
            android:id="@+id/ll_a"
            android:layout_width="0dp"
            android:layout_height="164dip"
            android:layout_below="@+id/title"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginTop="4dp"
            android:layout_weight="1"
            android:background="#47d3c2"
            android:orientation="vertical">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_gravity="center_horizontal"
                android:src="@drawable/switch_fragment_map_location" />

            <TextView
                android:id="@+id/switch_fragment_tvLocation"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="10dp"
                android:text="当前位置"
                android:textColor="@color/customblack"
                android:textSize="18sp" />
        </LinearLayout>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/line_home_fragment" />

        <LinearLayout
            android:id="@+id/ll_b"
            android:layout_width="0dp"
            android:layout_height="164dip"
            android:layout_below="@+id/title"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginTop="4dp"
            android:layout_toRightOf="@+id/ll_a"
            android:layout_weight="1"
            android:background="#47d3c2"
            android:orientation="vertical">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_gravity="center_horizontal"
                android:src="@drawable/iv_weather" />

            <TextView
                android:id="@+id/weather"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="10dp"
                android:text="现在天气"
                android:textColor="@color/customblack"
                android:textSize="18sp" />
        </LinearLayout>
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="248dp"
        android:layout_below="@+id/ll_container">

        <ToggleButton
            android:id="@+id/btn_SystemState"
            android:layout_width="200dp"
            android:layout_height="33dp"
            android:layout_marginLeft="80dp"
            android:layout_marginTop="50dp"
            android:background="#00000000"
            android:textOff=""
            android:textOn="" />

        <ImageView
            android:id="@+id/iv_SystemState"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:background="@drawable/switch_fragment_zhuangtai2" />
    </RelativeLayout>


