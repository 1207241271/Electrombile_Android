
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="match_parent"
    android:layout_width="match_parent">

    <com.xunce.electrombile.view.MyHorizontalScrollView
        android:id = "@+id/myHorizontalScrollView"
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:scrollbars="none">
        <LinearLayout
            android:layout_height="match_parent"
            android:layout_width="match_parent"
            android:orientation="horizontal">

            <include layout="@layout/left_menu"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <RelativeLayout
                    android:id="@+id/ll_button"
                    android:layout_width="match_parent"
                    android:background="#1dcf96"
                    android:layout_height="44dp">
                    <Button
                        android:id = "@+id/ChangeAutobike"
                        android:layout_width="60dp"
                        android:layout_height="48dp"
                        android:layout_alignParentLeft = "true"
                        android:layout_marginLeft="13dp"
                        android:layout_centerVertical="true"
                        android:text="切换"/>

                    <Button
                        android:id="@+id/btn_changeHeadImage"
                        android:layout_toRightOf="@+id/ChangeAutobike"
                        android:layout_marginLeft="2dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="切换头像"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:text = "小安宝"
                        android:textSize="17.33sp"
                        android:textColor="#d0f9e5"/>
                    <Button
                        android:id="@+id/weather1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight = "true"
                        android:layout_marginRight="13dp"
                        android:layout_centerVertical="true"
                        android:text = "天气" />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/ll_temp"
                    android:layout_width="match_parent"
                    android:layout_height="247dp"
                    android:background="#33000000">

                    <ImageView
                        android:id="@+id/img_test"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@drawable/temp1" />

                    <ImageView
                        android:id="@+id/img_headImage"
                        android:layout_centerInParent = "true"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:src="@drawable/person"
                        android:text="点我"/>

                    <ImageView
                        android:id="@+id/img_weather"
                        android:layout_alignParentRight = "true"
                        android:layout_marginRight="7dp"
                        android:layout_marginTop="10dp"
                        android:layout_width="72dp"
                        android:layout_height="72dp"
                        android:background="@drawable/rain"/>
                    <TextView
                        android:id="@+id/tv_temperature"
                        android:layout_alignRight="@+id/img_weather"
                        android:layout_below="@+id/img_weather"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text = "温度:"/>
                    <TextView
                        android:id="@+id/tv_weatherCondition"
                        android:layout_alignRight="@+id/img_weather"
                        android:layout_below="@+id/tv_temperature"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="天气状况:"/>
                    <TextView
                        android:layout_below="@+id/tv_weatherCondition"
                        android:layout_alignRight="@+id/img_weather"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="地区:武汉市洪山区"/>
                </RelativeLayout>

                <LinearLayout
                    android:id="@+id/ll_PowerandDistance"
                    android:layout_width="match_parent"
                    android:layout_height="83dp"
                    android:orientation="horizontal">
                    <RelativeLayout
                        android:layout_weight="1"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent">

                        <ImageView
                            android:id="@+id/img_battery"
                            android:layout_width="33dp"
                            android:layout_height="33dp"
                            android:layout_marginLeft="13dp"
                            android:layout_centerVertical="true"
                            android:background="@drawable/baterry"/>

                        <TextView
                            android:id="@+id/tv_battery"
                            android:layout_marginTop="23dp"
                            android:layout_toRightOf="@id/img_battery"
                            android:layout_marginLeft="10dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="#009f53"
                            android:text = "50%"
                            android:textSize="17.33sp"/>

                        <TextView
                            android:layout_below="@id/tv_battery"
                            android:layout_alignLeft="@id/tv_battery"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="12.67sp"
                            android:textColor="#595959"
                            android:text="预计可行驶60公里"/>
                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                        <ImageView
                            android:layout_width="0.3dp"
                            android:layout_height="73dp"
                            android:background="#d8d8d8"
                            android:layout_centerInParent="true"/>
                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_weight="1"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent">
                        <ImageView
                            android:id="@+id/img_distance"
                            android:layout_width="33.33dp"
                            android:layout_height="33.33dp"
                            android:layout_marginLeft="13.33dp"
                            android:layout_centerVertical="true"
                            android:background="@drawable/distance"/>

                        <TextView
                            android:id="@+id/tv_total"
                            android:layout_marginTop="33dp"
                            android:layout_toRightOf="@id/img_distance"
                            android:layout_marginLeft="33dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="#009f53"
                            android:text = "累计行驶"
                            android:textSize="17.33sp"/>

                        <TextView
                            android:id="@+id/tv_distance"
                            android:layout_below="@id/tv_total"
                            android:layout_alignLeft="@id/tv_total"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="12.67sp"
                            android:textColor="#595959"
                            android:text="0.00公里"/>

                    </RelativeLayout>
                </LinearLayout>

                <RelativeLayout
                    android:layout_marginTop="13dp"
                    android:layout_width="match_parent"
                    android:layout_height="67dp"
                    android:background="#e5e5e5">

                    <ImageView
                        android:id="@+id/img_sim"
                        android:layout_width="33dp"
                        android:layout_height="33dp"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="13dp"
                        android:background="@drawable/sim"/>

                    <TextView
                        android:id="@+id/tv1"
                        android:layout_toRightOf="@+id/img_sim"
                        android:layout_marginLeft="40dp"
                        android:layout_marginTop="12dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="12.67sp"
                        android:textColor="#595959"
                        android:text="小安宝流量"/>

                    <TextView
                        android:layout_below="@+id/tv1"
                        android:layout_marginTop="6dp"
                        android:layout_alignLeft="@+id/tv1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="17.33sp"
                        android:textColor="#009f53"
                        android:text="sim卡流量"/>
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <Button
                        android:id="@+id/btn_AlarmState1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:background="@drawable/btn_switch_selector_1"
                        android:drawableTop="@drawable/map_icon"
                        android:gravity="center"
                        android:padding="0dp"
                        android:text="防盗开启"
                        android:textSize="16sp" />
                </RelativeLayout>
            </LinearLayout>
        </LinearLayout>
    </com.xunce.electrombile.view.MyHorizontalScrollView>
</RelativeLayout>




