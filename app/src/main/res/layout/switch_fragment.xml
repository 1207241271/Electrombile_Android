<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.xunce.electrombile.view.MyHorizontalScrollView
        android:id = "@+id/myHorizontalScrollView"
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:scrollbars="none">
        <LinearLayout
            android:layout_height="match_parent"
            android:layout_width="match_parent"
            android:orientation="horizontal">

            <include layout="@layout/left_menu"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">


                <RelativeLayout
                    android:id="@+id/ll_button"
                    android:layout_width="match_parent"
                    android:background="#1dcf96"
                    android:layout_height="132px">
                    <Button
                        android:id = "@+id/ChangeAutobike"
                        android:layout_width="60dp"
                        android:layout_height="48dp"
                        android:layout_alignParentLeft = "true"
                        android:layout_marginLeft="40px"
                        android:layout_centerVertical="true"
                        android:text="切换"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:text = "小安宝"
                        android:textSize="48px"
                        android:textColor="#d0f9e5"/>
                    <Button
                        android:id="@+id/weather1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight = "true"
                        android:layout_marginRight="40px"
                        android:layout_centerVertical="true"
                        android:text = "天气" />

                </RelativeLayout>


                <RelativeLayout
                    android:id="@+id/ll_temp"
                    android:layout_width="match_parent"
                    android:layout_height="740px"
                    android:layout_below="@+id/ll_button"
                    android:background="#33000000">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/temp1" />

                    <ImageView
                        android:id="@+id/headImage"
                        android:layout_centerInParent = "true"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:background="@drawable/iv_person_head" />
                    
                    <ImageView
                        android:id="@+id/img_weather"
                        android:layout_alignParentRight = "true"
                        android:layout_marginRight="20px"
                        android:layout_marginTop="30px"
                        android:layout_width="215px"
                        android:layout_height="215px"
                        android:background="@drawable/rain"/>
                    <TextView
                        android:id="@+id/tv_temperature"
                        android:layout_alignRight="@+id/img_weather"
                        android:layout_below="@+id/img_weather"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text = "温度:"/>
                    <TextView
                        android:id="@+id/tv_weatherCondition"
                        android:layout_alignRight="@+id/img_weather"
                        android:layout_below="@+id/tv_temperature"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="天气状况:"/>
                    <TextView
                        android:layout_below="@+id/tv_weatherCondition"
                        android:layout_alignRight="@+id/img_weather"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="地区:武汉市洪山区"/>
                </RelativeLayout>
                
                <LinearLayout
                    android:id="@+id/ll_PowerandDistance"
                    android:layout_width="match_parent"
                    android:layout_height="250px"
                    android:orientation="horizontal">
                    <RelativeLayout
                        android:layout_weight="1"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent">
                        
                        <ImageView
                            android:id="@+id/img_battery"
                            android:layout_width="100px"
                            android:layout_height="100px"
                            android:layout_marginLeft="40px"
                            android:layout_centerVertical="true"
                            android:background="@drawable/baterry"/>

                        <TextView
                            android:id="@+id/tv_battery"
                            android:layout_marginTop="70px"
                            android:layout_toRightOf="@id/img_battery"
                            android:layout_marginLeft="30px"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="#009f53"
                            android:text = "50%电量"
                            android:textSize="52px"/>

                        <TextView
                            android:layout_below="@id/tv_battery"
                            android:layout_alignLeft="@id/tv_battery"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="38px"
                            android:textColor="#595959"
                            android:text="预计可行驶60公里"/>
                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                        <ImageView
                            android:layout_width="1px"
                            android:layout_height="220px"
                            android:background="#d8d8d8"
                            android:layout_centerInParent="true"/>

                    </RelativeLayout>



                    <RelativeLayout
                        android:layout_weight="1"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent">
                        <ImageView
                            android:id="@+id/img_distance"
                            android:layout_width="100px"
                            android:layout_height="100px"
                            android:layout_marginLeft="40px"
                            android:layout_centerVertical="true"
                            android:background="@drawable/distance"/>

                        <TextView
                            android:id="@+id/tv_total"
                            android:layout_marginTop="70px"
                            android:layout_toRightOf="@id/img_distance"
                            android:layout_marginLeft="30px"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="#009f53"
                            android:text = "累计行驶"
                            android:textSize="52px"/>

                        <TextView
                            android:id="@+id/tv_distance"
                            android:layout_below="@id/tv_total"
                            android:layout_alignLeft="@id/tv_total"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="38px"
                            android:textColor="#595959"
                            android:text="0.00公里"/>

                    </RelativeLayout>
                </LinearLayout>
                
                <RelativeLayout
                    android:layout_below = "@+id/ll_PowerandDistance"
                    android:layout_marginTop="40px"
                    android:layout_width="match_parent"
                    android:layout_height="200px"
                    android:background="#e5e5e5">
                    
                    <ImageView
                        android:id="@+id/img_sim"
                        android:layout_width="100px"
                        android:layout_height="100px"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="40px"
                        android:background="@drawable/sim"/>

                    <TextView
                        android:id="@+id/tv1"
                        android:layout_toRightOf="@+id/img_sim"
                        android:layout_marginLeft="120px"
                        android:layout_marginTop="36px"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="38px"
                        android:textColor="#595959"
                        android:text="小安宝流量"/>

                    <TextView
                        android:layout_below="@+id/tv1"
                        android:layout_marginTop="18px"
                        android:layout_alignLeft="@+id/tv1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="52px"
                        android:textColor="#009f53"
                        android:text="sim卡流量"/>
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <Button
                        android:id="@+id/btn_AlarmState1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:background="@drawable/btn_switch_selector_1"
                        android:drawableTop="@drawable/map_icon"
                        android:gravity="center"
                        android:padding="0dp"
                        android:text="防盗开启"
                        android:textSize="16sp" />
                </RelativeLayout>

            </LinearLayout>

        </LinearLayout>
    </com.xunce.electrombile.view.MyHorizontalScrollView>
</RelativeLayout>



