<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SwitchFragment">
    <RelativeLayout
        android:id="@+id/title"
        android:layout_width="fill_parent"
        android:layout_height="60dp"
        android:background="#ff1d252c"
        android:gravity="center_vertical" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="安全宝"
            android:textColor="#ffffff"
            android:textSize="20sp" />

    </RelativeLayout>
        <ToggleButton
            android:layout_width="@dimen/switch_btn_width"
            android:layout_height="@dimen/switch_btn_height"
            android:id="@+id/btn_SystemState"
            android:layout_marginTop="210dp"
            android:layout_centerHorizontal="true"
            android:textOn="关闭安全系统"
            android:textOff="启动安全系统"
            android:background="@drawable/common_btn_normal"/>

</RelativeLayout>