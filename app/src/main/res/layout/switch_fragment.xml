<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SwitchFragment">
    <RelativeLayout
        android:id="@+id/title"
        android:layout_width="fill_parent"
        android:layout_height="60dp"
        android:background="#bfbfbf"
        android:gravity="center_vertical" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="安全宝"
            android:textColor="@color/black"
            android:textSize="25sp" />

    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/ll_a"
        android:layout_below="@+id/title"
        android:layout_marginTop="5dp"
        android:orientation="horizontal">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_marginLeft="10dp"
            android:src="@drawable/switch_fragment_map_location"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/switch_fragment_tvLocation"
            android:text="当前位置"
            android:textSize="20sp"
            android:textColor="@color/blue"
            android:layout_gravity="center_vertical"
            android:singleLine="true"/>
    </LinearLayout>
    <ImageView
        android:layout_width="330dp"
        android:layout_height="20dp"
        android:layout_below="@+id/ll_a"
        android:id="@+id/iv1"
        android:layout_centerHorizontal="true"
        android:src="@drawable/switch_fragment_tiao"/>
    <ToggleButton
        android:layout_width="150dp"
        android:layout_height="110dp"
        android:id="@+id/btn_SystemState"
        android:layout_below="@+id/iv1"
        android:layout_marginLeft="120dp"
        android:textOn=""
        android:textOff=""
        android:background="#00000000"
        android:layout_marginTop="72dp"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/iv_SystemState"
        android:layout_marginBottom="20dp"
        android:layout_below="@+id/iv1"
        android:layout_centerHorizontal="true"
        android:background="@drawable/switch_fragment_zhuangtai2"/>

</RelativeLayout>