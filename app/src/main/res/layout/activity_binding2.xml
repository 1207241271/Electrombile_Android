<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation = "vertical"
    tools:context="com.xunce.electrombile.activity.BindingActivity2">

    <include
        android:id="@+id/ll_button"
        layout="@layout/my_layout_title" />

    <com.covics.zxingscanner.ScannerView
        android:id="@+id/scanner_view"
        android:layout_width="fill_parent"
        android:layout_height="0dip"
        android:layout_weight="6" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dip"
        android:layout_weight="1"
        android:orientation="horizontal">

        <Button
            android:id = "@+id/btn_InputIMEI"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:background="@drawable/nextstep_rect"
            android:textColor="@color/white"
            android:text = "输入产品序列号"/>
    </RelativeLayout>
</LinearLayout>
