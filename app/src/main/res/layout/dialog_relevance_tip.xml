<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/rect_dialog">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@drawable/rect_dialog_title">


        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:textColor="#009f53"
            android:textSize="17.33sp"
            android:text="温馨提示"/>
    </RelativeLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="17dp"
        android:paddingLeft="17dp"
        android:paddingRight="17dp"
        android:textColor="@color/white"
        android:textSize="15.33sp"
        android:text="该操作将存在风险隐患，小偷可用万能钥匙开启电门预警系统将无法自动识别该项情况。"/>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:layout_weight="1"
            android:id="@+id/btn_certain"
            android:layout_marginLeft="50dp"
            android:layout_height="40dp"
            android:layout_width="wrap_content"
            android:layout_marginTop="20dp"
            android:background="@drawable/btn_greenrect"
            android:textColor="#ffffff"
            android:text="确定"
            android:textSize="17.33sp" />

        <Button
            android:layout_weight="1"
            android:id="@+id/btn_cancel"
            android:layout_height="40dp"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="40dp"
            android:layout_width="wrap_content"
            android:layout_marginTop="20dp"
            android:background="@drawable/btn_greenrect"
            android:textColor="#ffffff"
            android:text="取消"
            android:textSize="17.33sp" />
    </LinearLayout>


    <View
        android:layout_width="match_parent"
        android:layout_height="20dp"/>
</LinearLayout>