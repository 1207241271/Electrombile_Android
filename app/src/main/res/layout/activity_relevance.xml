<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"

    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <include
        android:id="@+id/ll_button"
        layout="@layout/my_layout_title"/>

    <TextView
        android:text="电门关联已关闭"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="40dp"
        android:textSize="25sp"
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/img_switch_on"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/img_switch_off"
            android:layout_gravity="center_vertical|right"
            android:layout_weight="1"
            />
        <TextView
            android:id="@+id/button_relevance_lock_on"
            android:layout_gravity="center"
            android:gravity="left|center_vertical"
            android:text="开启"
            android:textSize="20sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            />
        <ImageView
            android:id="@+id/img_switch_off"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/img_switch_on"
            android:layout_gravity="center_vertical|right"
            android:layout_weight="1"
            />
        <TextView
            android:id="@+id/button_relevance_lock_off"
            android:layout_gravity="center"
            android:gravity="left|center_vertical"
            android:text="关闭"
            android:textSize="20sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            />
    </LinearLayout>

</LinearLayout>