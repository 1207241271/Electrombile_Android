<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.xunce.electrombile.activity.ForgetActivity">

    <EditText
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:id="@+id/phoneNum"
        android:hint="电话号码"
        android:phoneNumber="true"
        android:layout_marginTop="100dp"
        android:layout_marginLeft="50dp"
        />
    <EditText
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:id="@+id/newPwd"
        android:hint="新密码"
        android:password="true"
        android:layout_alignLeft="@id/phoneNum"
        android:layout_below="@id/phoneNum"
        android:layout_marginTop="20dp"/>
    <EditText
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:id="@+id/validation_forget"
        android:hint="输入验证码"
        android:layout_marginTop="230dp"
        android:layout_marginLeft="50dp"/>
    <Button
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:id="@+id/validation_send"
        android:text="获取验证码"
        android:background="@drawable/common_btn"
        android:layout_marginLeft="5dp"
        android:layout_toRightOf="@id/validation_forget"
        android:layout_alignBaseline="@id/validation_forget"/>


    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/validation_ok"
        android:text="确定"
        android:textSize="30sp"
        android:clickable="false"
        android:background="@drawable/common_btn"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="350dp"/>

</RelativeLayout>
