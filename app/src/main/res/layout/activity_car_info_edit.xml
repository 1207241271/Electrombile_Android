<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#f3f3f3"
    tools:context="com.xunce.electrombile.activity.CarInfoEditActivity">

    <RelativeLayout
        android:id="@+id/ll_button"
        android:layout_width="match_parent"
        android:background="#1dcf96"
        android:layout_height="44dp">
        <Button
            android:id = "@+id/btn_back"
            android:layout_width="60dp"
            android:layout_height="48dp"
            android:layout_alignParentLeft = "true"
            android:layout_marginLeft="13dp"
            android:layout_centerVertical="true"
            android:text="回撤"/>

        <TextView
            android:id="@+id/tv_carType"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text = "其他车辆"
            android:textSize="16sp"
            android:textColor="#d0f9e5"/>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="22dp">
        <ImageView
            android:id="@+id/img_car"
            android:layout_width="105dp"
            android:layout_height="114dp"
            android:src="@drawable/person"/>

        <LinearLayout
            android:layout_toRightOf="@+id/img_car"
            android:layout_marginLeft="24dp"
            android:layout_marginTop="27dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:id="@+id/tv_CarName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="车辆名称"
                android:textColor="#363636"
                android:textSize="12sp"/>

            <TextView
                android:id="@+id/tv_createTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="绑定日期"
                android:textColor="#363636"
                android:textSize="12sp"/>

            <TextView
                android:id = "@+id/tv_CarIMEI"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="设备号"
                android:textColor="#363636"
                android:textSize="12sp"/>

            <TextView
                android:id = "@+id/tv_phoneNumber"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="手机号"
                android:textColor="#363636"
                android:textSize="12sp"/>

        </LinearLayout>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/RelativeLayout_changeCarName"
        android:clickable="true"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="35dp"
        android:background="#ffffff">

        <TextView
            android:id="@+id/tv_changeCarName"
            android:layout_marginLeft="29dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:text="修改名称"
            android:textColor="#363636"
            android:layout_centerVertical="true"/>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/RelativeLayout_changeCarPic"
        android:clickable="true"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="7dp"
        android:background="#ffffff">

        <TextView
            android:id="@+id/tv_changeCarPic"
            android:layout_marginLeft="28dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:text="修改照片"
            android:textColor="#363636"
            android:layout_centerVertical="true"/>
    </RelativeLayout>

    <RelativeLayout
        android:id = "@+id/relativeLayout_DeviceChange"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="45dp"
        android:clickable="true"
        android:background="#ffffff">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="37dp"
            android:textSize="14dp"
            android:textColor="#464646"
            android:text="切换" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/relativelayout_DeviceUnbind"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="2dp"
        android:clickable="true"
        android:background="#ffffff">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="37dp"
            android:textSize="14dp"
            android:textColor="#464646"
            android:text="设备解绑" />
    </RelativeLayout>
</LinearLayout>
