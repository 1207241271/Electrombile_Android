<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="120px"
        android:background="@drawable/history_detail_background">
        
        <ImageView
            android:id="@+id/detail_line"
            android:layout_marginLeft="90px"
            android:layout_width="22px"
            android:layout_height="200px"
            android:src="@drawable/history_detail_line"/>
        
        <ImageView
            android:id="@+id/img_startPoint"
            android:layout_marginTop="14px"
            android:layout_toRightOf="@+id/detail_line"
            android:layout_marginLeft="315px"
            android:layout_width="25px"
            android:layout_height="36px"
            android:src="@drawable/history_detail_startplace"/>

        <TextView
            android:id="@+id/tv_startPoint"
            android:layout_marginTop="14px"
            android:layout_toRightOf="@+id/img_startPoint"
            android:layout_marginLeft="60px"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:ellipsize="end"
            android:text="罗宇东路"/>

        <ImageView
            android:id="@+id/img_endPoint"
            android:layout_below="@+id/img_startPoint"
            android:layout_alignLeft="@+id/img_startPoint"
            android:layout_marginTop="20px"
            android:layout_width="25px"
            android:layout_height="36px"
            android:src="@drawable/history_detail_endplace" />

        <TextView
            android:id="@+id/tv_endPoint"
            android:layout_below="@+id/img_startPoint"
            android:layout_marginTop="20px"
            android:layout_toRightOf="@+id/img_endPoint"
            android:layout_marginLeft="60px"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:ellipsize="end"
            android:text="光谷"/>
        
        <ImageView
            android:layout_width="20px"
            android:layout_height="37px"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="40px"
            android:src="@drawable/history_detail_next"/>
    </RelativeLayout>

</LinearLayout>