<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.xunce.electrombile.activity.BindingActivity">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="扫码绑定设备"
        android:id="@+id/bind_btn"
        android:background="@drawable/common_btn"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="350dp"/>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="确定"
        android:id="@+id/bindSuccess"
        android:background="@drawable/common_btn"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="280dp"/>
    <TextView
        android:layout_width="105dp"
        android:layout_height="wrap_content"
        android:text="设备信息"
        android:textSize="20sp"
        android:gravity="center"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"/>
    <TextView
        android:layout_width="105dp"
        android:layout_height="wrap_content"
        android:id="@+id/equipment_info"
        android:layout_marginTop="90dp"
        android:text="product_key:"
        android:gravity="center"
        android:textSize="18sp"/>
    <EditText
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:id="@+id/et_product_key"
        android:layout_toRightOf="@+id/equipment_info"
        android:layout_marginLeft="10dp"
        android:layout_alignBaseline="@+id/equipment_info"/>
    <TextView
        android:layout_width="105dp"
        android:layout_height="wrap_content"
        android:id="@+id/tv_equipment_info"
        android:layout_below="@+id/equipment_info"
        android:text="passcode:"
        android:gravity="center"
        android:layout_marginTop="10dp"
        android:textSize="18sp"/>
    <EditText
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:id="@+id/et_passCode"
        android:layout_toRightOf="@+id/tv_equipment_info"
        android:layout_marginLeft="10dp"
        android:layout_alignBaseline="@+id/tv_equipment_info"/>
    <TextView
        android:layout_width="105dp"
        android:layout_height="wrap_content"
        android:id="@+id/tv_did"
        android:layout_below="@+id/tv_equipment_info"
        android:text="did:"
        android:gravity="center"
        android:layout_marginTop="10dp"
        android:textSize="18sp"/>
    <EditText
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:id="@+id/et_did"
        android:layout_toRightOf="@+id/tv_did"
        android:layout_marginLeft="10dp"
        android:layout_alignBaseline="@+id/tv_did"/>
    <TextView
        android:id="@+id/jump_bind"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="跳过绑定"
        android:textColor="@color/textview_color"
        android:gravity="center_vertical"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="20dp"
        android:textSize="20sp" />

</RelativeLayout>
