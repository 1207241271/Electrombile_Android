<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/app_style"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    tools:context="com.xunce.electrombile.activity.account.VerifiedActivity">

    <ImageView
        android:layout_width="135dip"
        android:layout_height="135dip"
        android:layout_marginTop="17dip"
        android:src="@drawable/iv_login_act" />

    <LinearLayout
        android:id="@+id/llInputCode"
        android:layout_width="274dp"
        android:layout_height="42dp"
        android:layout_marginTop="50dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/etInputCode"
            android:layout_width="170dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:background="@drawable/line_et"
            android:gravity="center"
            android:hint="@string/forget_password_verifycode"
            android:inputType="number"
            android:textColor="@color/base_color_text_white"
            android:textColorHint="@color/base_color_text_white" />

        <Button
            android:id="@+id/btnReGetCode"
            android:layout_width="89dp"
            android:layout_height="match_parent"
            android:layout_marginRight="5dp"
            android:background="@drawable/btn_getverifycode_register_act"
            android:ellipsize="marquee"
            android:focusableInTouchMode="true"
            android:marqueeRepeatLimit="marquee_forever"
            android:onClick="getVerifiedCode"
            android:singleLine="true"
            android:text="@string/forget_password_get_verifycode"
            android:textColor="@android:color/background_light"
            android:textSize="14sp" />
    </LinearLayout>

    <Button
        android:id="@+id/btnSure"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="150dp"
        android:background="@drawable/btn_login"
        android:onClick="verified"
        android:text="确    定"
        android:textColor="@color/base_color_text_white" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="50dp"
        android:text="@string/company_name"
        android:textColor="@android:color/background_light"
        android:textSize="20sp" />

</LinearLayout>
