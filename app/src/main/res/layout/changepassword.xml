<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:focusableInTouchMode="true"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#1dcf96">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="#ffffff">
        
        <Button
            android:id="@+id/btn_cancel"
            android:layout_width="12dp"
            android:layout_height="12dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/img_cancel"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:textColor="#009f53"
            android:textSize="17.33sp"
            android:text="修改密码"/>
    </RelativeLayout>

    <EditText
        android:layout_marginTop="23.33dp"
        android:id="@+id/et_oldpass"
        android:layout_width="233.33dp"
        android:layout_height="38dp"
        android:layout_gravity="center"
        android:inputType="textPassword"
        android:drawableLeft="@drawable/img_oldpass"
        android:drawablePadding="18.33dp"
        android:padding="5dp"
        android:hint = "原密码" />

    <EditText
        android:layout_marginTop="23.33dp"
        android:id="@+id/et_newpass"
        android:layout_width="233.33dp"
        android:layout_height="38dp"
        android:layout_gravity="center"
        android:inputType="textPassword"
        android:drawableLeft="@drawable/img_newpass"
        android:drawablePadding="18.33dp"
        android:padding="5dp"
        android:hint = "请输入新密码" />

    <Button
        android:id="@+id/btn_sure"
        android:layout_marginTop="31.67dp"
        android:layout_width="153dp"
        android:layout_height="41dp"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/changepass_sure"
        android:text="确认"/>
</LinearLayout>