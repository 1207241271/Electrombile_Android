<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.xunce.electrombile">

    <!-- 账户相关权限 -->
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.USE_CREDENTIALS" />
    <uses-permission android:name="android.permission.MANAGE_ACCOUNTS" />
    <uses-permission android:name="android.permission.AUTHENTICATE_ACCOUNTS" />
    <uses-permission android:name="com.android.launcher.permission.READ_SETTINGS" />
    <uses-permission android:name="android.permission.WRITE_SETTINGS" />
    <!-- 这个权限用于应用间广播 -->
    <uses-permission android:name="android.permission.BROADCAST_STICKY" />
    <!-- 这个权限用于进行网络定位 -->
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <!-- 这个权限用于访问GPS定位 -->
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <!-- 用于访问wifi网络信息，wifi信息会用于进行网络定位 -->
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    <!-- 获取运营商信息，用于支持提供运营商信息相关的接口 -->
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <!-- 这个权限用于获取wifi的获取权限，wifi信息会用来进行网络定位 -->
    <uses-permission android:name="android.permission.CHANGE_WIFI_STATE" />
    <!-- 用于读取手机当前的状态 -->
    <uses-permission android:name="android.permission.READ_PHONE_STATE" />
    <!-- 写入扩展存储，向扩展卡写入数据，用于写入离线定位数据 -->
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <!-- 访问网络，网络定位需要上网 -->
    <uses-permission android:name="android.permission.INTERNET" />
    <!-- SD卡读取权限，用户写入离线定位数据 -->
    <uses-permission android:name="android.permission.MOUNT_UNMOUNT_FILESYSTEMS" />
    <!-- 允许应用读取低级别的系统日志文件 -->
    <uses-permission android:name="android.permission.READ_LOGS" />
    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.VIBRATE" />
    <uses-permission android:name="android.permission.FLASHLIGHT" />

    <uses-feature android:name="android.hardware.camera" />
    <uses-feature android:name="android.hardware.camera.autofocus" />
    <!-- 读取来电号码 -->
    <uses-permission android:name="android.permission.PROCESS_OUTGOING_CALLS" />
    <!-- 显示悬浮窗的权限 -->
    <uses-permission android:name="android.permission.SYSTEM_ALERT_WINDOW" />
    <!-- 更新权限 -->
    <uses-permission android:name="android.permission.WAKE_LOCK" />
    <uses-permission android:name="android.permission.DISABLE_KEYGUARD" />
    <!-- 云巴权限 -->
    <uses-permission android:name="android.permission.RECEIVE_USER_PRESENT" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <!-- BugHD -->
    <uses-permission android:name="android.permission.GET_TASKS" />
    <uses-permission android:name="android.permission.MANAGE_DOCUMENTS" />

    <application
        android:name=".applicatoin.App"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:screenOrientation="portrait"
        android:theme="@style/App2Theme">

        <!-- BugHD -->
        <meta-data
            android:name="BUG_HD_SDK_GENERAL_KEY"
            android:value="c3eabcfe28504e5428596427cfdd2311" />

        <activity
            android:name=".activity.SplashActivity"
            android:label="@string/app_name"
            android:screenOrientation="portrait"
            android:theme="@style/splashActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activity.account.LoginActivity"
            android:label="@string/title_activity_login"
            android:screenOrientation="portrait" />
        <activity
            android:name=".activity.account.RegisterActivity"
            android:label="RegisterActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".activity.BindingActivity"
            android:label="@string/title_activity_binding"
            android:screenOrientation="portrait" />
        <activity
            android:name=".activity.account.ForgetPswActivity"
            android:label="@string/title_activity_forget"
            android:screenOrientation="portrait" />
        <activity
            android:name=".activity.SettingsActivity"
            android:label="@string/title_activity_settings"
            android:screenOrientation="portrait" />
        <activity
            android:name=".activity.FragmentActivity"
            android:label="@string/title_activity_fragment"
            android:launchMode="singleTask"
            android:screenOrientation="portrait" />
        <activity
            android:name=".activity.ScannerActivity"
            android:label="Scanner"
            android:screenOrientation="portrait" />
        <activity
            android:name=".activity.AlarmActivity"
            android:label="Alarm"
            android:launchMode="singleTask"
            android:screenOrientation="portrait"
            android:theme="@style/App2Theme" />
        <activity
            android:name=".activity.RecordActivity"
            android:label="Record"
            android:screenOrientation="portrait" />
        <activity
            android:name=".activity.AboutActivity"
            android:label="About"
            android:screenOrientation="portrait" />
        <activity
            android:name=".activity.HelpActivity"
            android:label="Help"
            android:screenOrientation="portrait" />

        <activity
            android:name=".activity.Autolock"
            android:label="Autolock"
            android:screenOrientation="portrait" />

        <activity
            android:name=".activity.MapOfflineActivity"
            android:label="MapOffline"
            />

        <!--
        来电悬浮窗暂关闭
        <receiver android:name=".IncomingReceiver">
            <intent-filter>
                <action android:name="android.intent.action.PHONE_STATE"/>
                <action android:name="android.intent.action.NEW_OUTGOING_CALL"/>
            </intent-filter>
        </receiver>
        -->


        <!-- Mqtt Service -->
        <service android:name="org.eclipse.paho.android.service.MqttService" />

        <activity
            android:name=".activity.BindListActivity"
            android:label="@string/title_activity_bind_list"
            android:screenOrientation="portrait" />
        <activity
            android:name=".activity.FindActivity"
            android:label="@string/title_activity_find"
            android:screenOrientation="portrait" />
        <activity
            android:name=".activity.account.PersonalCenterActivity"
            android:label="@string/title_activity_personal_center"
            android:screenOrientation="portrait"
            android:theme="@style/App2Theme" />
        <activity
            android:name=".activity.DeviceActivity"
            android:label="@string/title_activity_equipment"
            android:screenOrientation="portrait"
            android:theme="@style/App2Theme" />

        <service
            android:name=".services.AlarmService"
            android:enabled="true"
            android:exported="true">
            <intent-filter android:priority="1000">
                <action android:name="com.xunce.electrombile.alarmservice" />
            </intent-filter>
        </service>
        <receiver android:name=".fragment.SwitchFragment$NetWorkListen">
            <intent-filter>
                <action android:name="android.net.conn.CONNECTIVITY_CHANGE"/>
            </intent-filter>
        </receiver>

        <activity
            android:name=".activity.account.VerifiedActivity"
            android:label="VerifiedActivity"
            android:screenOrientation="portrait"
            android:theme="@style/App2Theme" />
        <activity
            android:name=".activity.TestActivity"
            android:label="VerifiedActivity"
            android:screenOrientation="portrait"
            android:theme="@style/App2Theme" />
        <activity android:name=".activity.TestddActivity" />
        <activity android:name=".activity.CarManageActivity" />
        <activity android:name=".activity.CarInfoEditActivity" />
        <activity
            android:name=".activity.account.RegisterActivity_Part1"
            android:label="@string/title_activity_register_activity__part1" />
        <activity android:name=".activity.account.SMSandPasswordActivity" />
        <activity android:name=".activity.BindingActivity2" />
        <activity android:name=".activity.WelcomeActivity" />
        <activity android:name=".activity.InputIMEIActivity" />
        <activity android:name=".activity.account.ForgetPassActivity2" />
        <activity android:name=".activity.account.ResetPassActivity"></activity>
    </application>

</manifest>
